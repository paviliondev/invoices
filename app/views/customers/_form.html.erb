<%= form_for(@customer) do |f| %>
  <% if @customer.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@customer.errors.count, "error") %>
        prohibited this customer from being saved:
      </h2>
      <ul>
        <% @customer.errors.full_messages.each do |message| %>
          <li>
            <%= message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="m-b-2">
    <h1 class="m-b-0">
      <% if @customer.new_record? %>
        New Customer
      <% else %>
        <%= @customer %>
      <% end %>
    </h1>
    <div class="checkbox">
      <label>
        <%= f.check_box :active %>
        This customer is active
      </label>
    </div>
    <%= render partial: 'customers/form_fields', locals: {f: f, disabled: false} %>
  </div>
  
  <div class="m-b-2">
    <h2 class="m-b-1">Group</h2>
    <div class="form-group">
      <%= f.label :group %>
      <%= f.text_field :group, class: 'form-control' %>
    </div>
  </div>
  
  <div class="m-b-2">
    <h2 class="m-b-1">Tags</h2>
    <%= render partial: 'shared/tagging_field', locals: {f: f, instance: @customer} %>
  </div>
  
  <div class="m-b-2">
    <h2 class="m-b-1">Meta Attributes</h2>
    <%= render partial: 'shared/meta_form', locals: {f: f, instance: @customer} %>
  </div>
<% end %>